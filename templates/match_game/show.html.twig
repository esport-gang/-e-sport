{% block title %}{{ match_game.equipe1.name }} vs {{ match_game.equipe2.name }}{% endblock %}

{% block body %}
<style>
    :root{--bg:#0f172a;--card1:#111827;--card2:#1f2933;--text:#e5e7eb;--primary:#2563eb;--accent:#22c55e}
    body{background:var(--bg);color:var(--text);font-family:'Segoe UI',sans-serif}
    .container{max-width:1200px;margin:auto;padding:40px 20px}
    .page-title{text-align:center;font-size:2.5rem;margin-bottom:40px}
    .match-card{background:linear-gradient(145deg,var(--card1),var(--card2));border-radius:16px;padding:40px;box-shadow:0 10px 30px rgba(0,0,0,.4);margin-bottom:30px;border:1px solid #374151}
    .match-teams-display{display:flex;justify-content:space-around;align-items:center;margin:40px 0;flex-wrap:wrap;gap:30px}
    .team-section{text-align:center;flex:1;min-width:150px}
    .team-name{font-size:2rem;font-weight:700;color:var(--primary);margin-bottom:5px}
    .team-label{color:#9ca3af;font-size:0.9rem;text-transform:uppercase;letter-spacing:1px}
    .score-display{background:linear-gradient(135deg,#1e40af,var(--primary));padding:30px 50px;border-radius:15px;font-weight:900;font-size:3.5rem;color:white;box-shadow:0 10px 30px rgba(37,99,235,.3)}
    .match-details{background:rgba(31,41,51,.5);padding:25px;border-radius:12px;margin:30px 0;border-left:4px solid var(--primary)}
    .detail-row{display:flex;padding:12px 0;border-bottom:1px solid #374151}
    .detail-row:last-child{border-bottom:none}
    .detail-label{font-weight:600;color:var(--primary);min-width:150px}
    .detail-value{color:#d1d5db;flex:1}
    .badge{display:inline-block;padding:6px 12px;border-radius:20px;font-size:0.85rem;font-weight:600}
    .badge-primary{background:linear-gradient(135deg,var(--primary),#1d4ed8);color:white}
    .badge-finished{background:#10b981;color:white}
    .badge-in-progress{background:#f59e0b;color:#1f2937}
    .badge-pending{background:#6b7280;color:white}
    .actions{display:flex;gap:12px;justify-content:center;flex-wrap:wrap;margin-top:30px;padding-top:30px;border-top:1px solid #374151}
    .btn{padding:12px 24px;border-radius:10px;font-weight:600;transition:all .3s;border:none;cursor:pointer;text-decoration:none;display:inline-flex;align-items:center;gap:8px}
    .btn-back{background:#374151;color:var(--text)}.btn-back:hover{background:#4b5563}
    .btn-edit{background:#f59e0b;color:#1f2937}.btn-edit:hover{background:#d97706}
    .danger-zone{margin-top:30px;padding-top:30px;border-top:2px solid #ef4444}
    .danger-zone h3{color:#ef4444;margin-top:0}
</style>

<div class="container">
    <h1 class="page-title">‚öîÔ∏è Match Details</h1>

    <div class="match-card">
        <div class="match-teams-display">
            <div class="team-section">
                <div class="team-name">{{ match_game.equipe1.name }}</div>
                <div class="team-label">Team 1</div>
            </div>
            <div class="score-display">{{ match_game.scoreTeam1 }}<span style="font-size:2.5rem;margin:0 10px">-</span>{{ match_game.scoreTeam2 }}</div>
            <div class="team-section">
                <div class="team-name">{{ match_game.equipe2.name }}</div>
                <div class="team-label">Team 2</div>
            </div>
        </div>

        <div class="match-details">
            <div class="detail-row">
                <span class="detail-label">Tournament</span>
                <span class="detail-value"><span class="badge badge-primary">{{ match_game.tournament.name }}</span></span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Match ID</span>
                <span class="detail-value">#{{ match_game.id }}</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Date & Time</span>
                <span class="detail-value">üìÖ {{ match_game.dateMatch|date('d/m/Y H:i:s') }}</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Status</span>
                <span class="detail-value">
                    {% if match_game.statut == 'Finished' %}
                        <span class="badge badge-finished">‚úì {{ match_game.statut }}</span>
                    {% elseif match_game.statut == 'In Progress' %}
                        <span class="badge badge-in-progress">‚óè {{ match_game.statut }}</span>
                    {% else %}
                        <span class="badge badge-pending">‚óã {{ match_game.statut }}</span>
                    {% endif %}
                </span>
            </div>
        </div>

        <div class="actions">
            <a href="{{ path('app_match_game_index') }}" class="btn btn-back">
                <i class="fas fa-arrow-left"></i> Back to Matches
            </a>
            <a href="{{ path('app_match_game_edit', {'id': match_game.id}) }}" class="btn btn-edit">
                <i class="fas fa-edit"></i> Edit Match
            </a>
        </div>
    </div>

    <div class="match-card danger-zone">
        <h3>Delete Match</h3>
        {{ include('match_game/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
