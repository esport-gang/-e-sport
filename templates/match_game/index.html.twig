
{% block title %}Match Game List{% endblock %}

{% block body %}
<style>
    :root{--bg:#0f172a;--card1:#111827;--card2:#1f2933;--text:#e5e7eb;--primary:#2563eb;--accent:#22c55e}
    body{background:var(--bg);color:var(--text);font-family:'Segoe UI',sans-serif}
    .container{max-width:1200px;margin:auto;padding:40px 20px}
    .page-title{text-align:center;font-size:2.5rem;margin-bottom:40px}
    .header-actions{display:flex;justify-content:space-between;align-items:center;margin-bottom:30px;flex-wrap:wrap;gap:20px}
    .header-actions h1{margin:0;flex:1;min-width:200px}
    .matches-grid{display:grid;grid-template-columns:1fr;gap:20px}
    .match-card{background:linear-gradient(145deg,var(--card1),var(--card2));border-radius:16px;padding:25px;box-shadow:0 10px 30px rgba(0,0,0,.4);transition:transform .3s,box-shadow .3s;border:1px solid #374151}
    .match-card:hover{transform:translateY(-4px);box-shadow:0 15px 40px rgba(0,0,0,.6)}
    .match-header{display:flex;justify-content:space-between;align-items:center;margin-bottom:20px;flex-wrap:wrap;gap:15px}
    .match-teams{display:flex;gap:20px;align-items:center;flex:1;min-width:250px}
    .team-name{font-weight:600;font-size:1.1rem}
    .team-name strong{color:var(--primary);display:block;font-size:1.3rem}
    .score-display{background:linear-gradient(135deg,#1e40af,var(--primary));padding:15px 25px;border-radius:10px;font-weight:700;font-size:1.8rem;text-align:center;min-width:100px}
    .match-meta{display:flex;gap:15px;flex-wrap:wrap;align-items:center}
    .badge{display:inline-block;padding:6px 12px;border-radius:20px;font-size:0.85rem;font-weight:600}
    .badge-tournament{background:linear-gradient(135deg,#2563eb,#1d4ed8);color:white}
    .badge-status{color:white}
    .badge-finished{background:#10b981}
    .badge-in-progress{background:#f59e0b}
    .badge-pending{background:#6b7280}
    .match-date{color:#9ca3af;font-size:0.95rem}
    .match-actions{display:flex;gap:10px;flex-wrap:wrap}
    .btn{padding:8px 16px;border-radius:8px;font-weight:600;transition:.3s;border:none;cursor:pointer;text-decoration:none;display:inline-flex;align-items:center;gap:6px;font-size:0.9rem}
    .btn-view{background:#374151;color:var(--text)}.btn-view:hover{background:#4b5563}
    .btn-edit{background:#f59e0b;color:#1f2937}.btn-edit:hover{background:#d97706}
    .btn-new{background:linear-gradient(135deg,var(--accent),#16a34a);color:white}.btn-new:hover{transform:translateY(-2px);box-shadow:0 10px 25px rgba(34,197,94,.3)}
    .empty-state{text-align:center;padding:60px 20px;color:#9ca3af}
    .empty-state h2{color:var(--text);margin-bottom:10px}
</style>

<div class="container">
    <div class="header-actions">
        <h1 class="page-title">üéÆ Matches</h1>
        <a href="{{ path('app_match_game_new') }}" class="btn btn-new">
            <i class="fas fa-plus"></i> New Match
        </a>
    </div>

    {% if match_games|length > 0 %}
        <div class="matches-grid">
        {% for match_game in match_games %}
            <div class="match-card">
                <div class="match-header">
                    <div class="match-teams">
                        <div>
                            <div class="team-name">{{ match_game.equipe1.name }}</div>
                            <span class="badge badge-tournament">Team 1</span>
                        </div>
                        <div class="score-display">{{ match_game.scoreTeam1 }} - {{ match_game.scoreTeam2 }}</div>
                        <div>
                            <div class="team-name">{{ match_game.equipe2.name }}</div>
                            <span class="badge badge-tournament">Team 2</span>
                        </div>
                    </div>
                </div>

                <div class="match-meta">
                    <div>
                        <span class="badge badge-tournament">{{ match_game.tournament.name }}</span>
                    </div>
                    <div class="match-date">üìÖ {{ match_game.dateMatch|date('d/m/Y H:i') }}</div>
                    <div>
                        {% if match_game.statut == 'Finished' %}
                            <span class="badge badge-status badge-finished">‚úì {{ match_game.statut }}</span>
                        {% elseif match_game.statut == 'In Progress' %}
                            <span class="badge badge-status badge-in-progress">‚óè {{ match_game.statut }}</span>
                        {% else %}
                            <span class="badge badge-status badge-pending">‚óã {{ match_game.statut }}</span>
                        {% endif %}
                    </div>
                </div>

                <div class="match-actions" style="margin-top:15px;padding-top:15px;border-top:1px solid #374151">
                    <a href="{{ path('app_match_game_show', {'id': match_game.id}) }}" class="btn btn-view">
                        <i class="fas fa-eye"></i> View
                    </a>
                    <a href="{{ path('app_match_game_edit', {'id': match_game.id}) }}" class="btn btn-edit">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                </div>
            </div>
        {% endfor %}
        </div>
    {% else %}
        <div class="empty-state">
            <h2>No matches yet</h2>
            <p>Create your first match to get started</p>
            <a href="{{ path('app_match_game_new') }}" class="btn btn-new" style="justify-content:center;margin-top:20px">
                <i class="fas fa-plus"></i> Create First Match
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
