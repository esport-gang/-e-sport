<form method="post" action="{{ path('app_match_game_delete', {'id': match_game.id}) }}" onsubmit="return confirm('Are you sure you want to delete this match? This action cannot be undone.');" class="mt-4 pt-4 border-top">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ match_game.id) }}">
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash"></i> Delete Match
    </button>
</form>
