{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
    <div class="form-row">
        <div class="form-group">
            {{ form_row(form.equipe1, {'label': 'Team 1', 'attr': {'class': 'form-select'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.equipe2, {'label': 'Team 2', 'attr': {'class': 'form-select'}}) }}
        </div>
    </div>

    <div class="form-row">
        <div class="form-group">
            {{ form_row(form.scoreTeam1, {'label': 'Score Team 1', 'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.scoreTeam2, {'label': 'Score Team 2', 'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-row">
        <div class="form-group">
            {{ form_row(form.dateMatch, {'label': 'Match Date & Time', 'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.tournament, {'label': 'Tournament', 'attr': {'class': 'form-select'}}) }}
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> {{ button_label|default('Save') }}
        </button>
        <a href="{{ path('app_match_game_index') }}" class="btn btn-secondary">
            <i class="fas fa-times"></i> Cancel
        </a>
    </div>
{{ form_end(form) }}
