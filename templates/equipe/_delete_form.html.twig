<form method="post" action="{{ path('app_equipe_delete', {'id': equipe.id}) }}" onsubmit="return confirm('Are you sure you want to delete this team? This action cannot be undone.');" class="mt-4 pt-4 border-top">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipe.id) }}">
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash"></i> Delete Team
    </button>
</form>
