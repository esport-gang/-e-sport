
{% block title %}Edit Equipe{% endblock %}

{% block body %}
<style>
    :root{--bg:#0f172a;--card1:#111827;--card2:#1f2933;--text:#e5e7eb;--primary:#2563eb}
    body{background:var(--bg);color:var(--text);font-family:'Segoe UI',sans-serif}
    .container{max-width:1200px;margin:auto;padding:40px 20px}
    .page-title{text-align:center;font-size:2.5rem;margin-bottom:40px}
    .form-card{background:linear-gradient(145deg,var(--card1),var(--card2));border-radius:16px;padding:40px;box-shadow:0 10px 30px rgba(0,0,0,.4);border:1px solid #374151;max-width:500px;margin:0 auto}
    .form-card form{display:flex;flex-direction:column;gap:20px}
    .form-card input,.form-card textarea,.form-card select{background:#1f2933;border:1px solid #374151;color:var(--text);padding:12px;border-radius:8px;font-family:inherit;font-size:1rem}
    .form-card input:focus,.form-card textarea:focus,.form-card select:focus{outline:none;border-color:var(--primary);box-shadow:0 0 0 3px rgba(37,99,235,.1)}
    .form-card label{color:#d1d5db;font-weight:600;margin-bottom:5px}
    .btn{padding:12px 24px;border-radius:10px;font-weight:600;transition:all .3s;border:none;cursor:pointer;text-align:center}
    .btn-back{background:#374151;color:var(--text);margin-top:20px}.btn-back:hover{background:#4b5563}
    .btn-submit{background:linear-gradient(135deg,#3b82f6,#2563eb);color:#fff}.btn-submit:hover{transform:translateY(-2px);box-shadow:0 10px 25px rgba(37,99,235,.2)}
    .form-actions{text-align:center;margin-top:12px}
    .danger-zone{margin-top:30px;padding-top:30px;border-top:2px solid #ef4444}.danger-zone h3{color:#ef4444;margin-top:0}
</style>

<div class="container">
    <h1 class="page-title">✏️ Edit Team</h1>

    <div class="form-card">
        {{ include('equipe/_form.html.twig', {'button_label': 'Update'}) }}
    </div>

    <div style="text-align: center;">
        <a href="{{ path('app_equipe_index') }}" class="btn btn-back">← Back to Teams</a>
    </div>

    <div class="form-card danger-zone">
        <h3>⚠️ Danger Zone</h3>
        {{ include('equipe/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
