{# templates/teams/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Teams Management{% endblock %}

{% block body %}
<div class="min-h-screen bg-black flex flex-col items-center justify-center px-4">
  <h1 class="text-6xl font-bold mb-16 bg-gradient-to-r from-pink-500 via-pink-400 to-purple-500 text-transparent bg-clip-text">
    Teams Management
  </h1>

  <div class="flex flex-wrap gap-8 max-w-6xl mx-auto justify-center">

    {# Card Create Team #}
    <div class="w-full sm:w-[450px] bg-gradient-to-br from-rose-900 to-pink-900 rounded-3xl p-12 flex flex-col items-center justify-center text-center hover:scale-105 transition-transform duration-300 cursor-pointer">
      
      <div class="w-24 h-24 bg-pink-500 rounded-full flex items-center justify-center mb-8">
        {# Icône Plus en SVG (remplace lucide-react) #}
        <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
        </svg>
      </div>

      <h2 class="text-4xl font-bold text-white mb-4">Create Team</h2>
      <p class="text-pink-200 text-lg">Start your own esports team</p>
    </div>

    {# Card Join Team #}
    <div class="w-full sm:w-[450px] bg-gradient-to-br from-blue-950 to-blue-900 rounded-3xl p-12 flex flex-col items-center justify-center text-center hover:scale-105 transition-transform duration-300 cursor-pointer">
      
      <div class="w-24 h-24 bg-blue-500 rounded-full flex items-center justify-center mb-8">
        {# Icône UserPlus en SVG #}
        <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16 14a4 4 0 10-8 0m8 0v1a4 4 0 01-8 0v-1m8 0h4m-2-2v4M12 12a4 4 0 110-8 4 4 0 010 8z"/>
        </svg>
      </div>

      <h2 class="text-4xl font-bold text-white mb-4">Join Team</h2>
      <p class="text-blue-200 text-lg">Browse and join existing teams</p>
    </div>

  </div>
</div>
{% endblock %}
